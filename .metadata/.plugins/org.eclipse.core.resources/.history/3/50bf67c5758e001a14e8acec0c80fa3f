<?php
namespace Servicos;

class Login
{
    private $usuario;
    private $senha;
    
    // Construtor
    public function dadosLogin($usuario, $senha)
    {
        $this-> setUsuario($usuario);
        $this-> setSenha($senha);
    }
    
    // Metodos de atributos
    public function getUsuario()
    {
        return $this->usuario;
    }

    public function getSenha()
    {
        return $this->senha;
    }

    public function setUsuario($usuario)
    {
        $this->usuario = $usuario;
    }

    public function setSenha($senha)
    {
        $this->senha = $senha;
    }
    
    // Metodos
    public function loginBanco($conection, $usuario, $senha)
    {
        $query = 'SELECT `idUsuario`
                  FROM `usuario`
                  WHERE `email.usuario` = $usuario
                  AND `senha.usuario` = $senha
                  ;';
        
        
        $acesso = mysqli_query($conection, $query);
        $result = mysqli_num_rows($acesso);
        
        if($result == 0)
        {
            $retorno = false;
            return $retorno;
        }
        else
        {
            $retorno = true;
            return $retorno;
        }
    }   
    
}

